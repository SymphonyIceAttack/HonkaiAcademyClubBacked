generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model EquipMemntShare {
  id        String @id @default(uuid())
  MaskShare String
  @@index([MaskShare], type: Hash)
}

model User {
  id                    String                  @id @default(uuid())
  nickname              String                  @unique
  account               String                  @unique
  password              String
  MissingTimes          Int                     @default(0)
  Attendance            Int                     @default(0)
  avatarImage           avatarImgage?
  equipmentImage        equipmentImage?
  MoeChapterImage       MoeChapterImage?
  attendanceRecordSheet attendanceRecordSheet[]
}

model avatarImgage {
  id       String @id @default(uuid())
  path     String
  size     Int
  mimeType String
  user     User   @relation(fields: [userId], references: [id])
  userId   String @unique
}

model equipmentImage {
  id       String @id @default(uuid())
  path     String
  size     Int
  mimeType String
  user     User   @relation(fields: [userId], references: [id])
  userId   String @unique
}

model MoeChapterImage {
  id       String @id @default(uuid())
  path     String
  size     Int
  mimeType String
  user     User   @relation(fields: [userId], references: [id])
  userId   String @unique
}

model attendanceRecordSheet {
  id        String  @id @default(uuid())
  timeStamp String
  user      User    @relation(fields: [userId], references: [id])
  userId    String
  isMiss    Boolean
}
